<script>
// ðŸŽ‚ Set Birthday (Automatically adjusts year)
let today = new Date();
let year = today.getFullYear();
let birthday = new Date("March 7, " + year + " 00:00:00");

if (today > birthday) {
    birthday = new Date("March 7, " + (year + 1) + " 00:00:00");
}

let timer = setInterval(function() {

    let now = new Date().getTime();
    let distance = birthday - now;

    let days = Math.floor(distance / (1000 * 60 * 60 * 24));
    let hours = Math.floor((distance % (1000 * 60 * 60 * 24)) / (1000 * 60 * 60));
    let minutes = Math.floor((distance % (1000 * 60 * 60)) / (1000 * 60));
    let seconds = Math.floor((distance % (1000 * 60)) / 1000);

    document.getElementById("days").innerHTML = days;
    document.getElementById("hours").innerHTML = hours;
    document.getElementById("minutes").innerHTML = minutes;
    document.getElementById("seconds").innerHTML = seconds;

    if (distance < 0) {
        clearInterval(timer);
        document.getElementById("countdown").innerHTML = 
        "<h2>ðŸŽ‰ Happy Birthday Sakshi! ðŸŽ‚ðŸ’–</h2><p>May your life bloom like a beautiful lily ðŸŒ¸âœ¨</p>";
    }

}, 1000);


// ðŸ’Œ Special Message
function showMessage() {
    document.getElementById("message").innerHTML =
    "Sakshi ðŸŒ¸ You are as pure and beautiful as a lily flower. May your smile always shine and your dreams always bloom. I feel lucky to have such a wonderful friend like you ðŸ’–âœ¨";
}


// ðŸŒ¸ Create Lily Flowers
let lilyContainer = document.querySelector(".lily-container");

for (let i = 0; i < 25; i++) {
    let lily = document.createElement("div");
    lily.classList.add("lily");
    lily.innerHTML = "ðŸŒ¸";
    lily.style.left = Math.random() * 100 + "vw";
    lily.style.animationDuration = (4 + Math.random() * 6) + "s";
    lilyContainer.appendChild(lily);
}
</script>

